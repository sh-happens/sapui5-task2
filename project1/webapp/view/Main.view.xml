<mvc:View controllerName="project1.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Table
            id="bookList"
            class="sapUiResponsiveMargin"
            width="auto"
            mode="MultiSelect"
            items="{
				path : 'book>/Books'
			}">
            <headerToolbar>
                <Toolbar>
                    <Title text="Books" />
                    <ToolbarSpacer />

                    <Button text="Add Record" icon="sap-icon://add" press=".onAddRecord" />
                    <Button text="Delete Record" icon="sap-icon://delete" press=".onDeleteRecord" />

                    <ToolbarSeparator />

                    <Input
                        id="titleFilter"
                        width="180px"
                        placeholder="Filter by title..."
                        value="{view>/titleQuery}"
                    />

                    <Select
                        id="genreFilter"
                        width="150px"
                        selectedKey="{view>/selectedGenre}"
                        change=".onGenreChange">
                    </Select>

                    <Button
                        text="Filter"
                        press=".onApplyFilters" />
                </Toolbar>
            </headerToolbar>

            <columns>
                <Column>
                    <Text text="ID" />
                </Column>
                <Column>
                    <Text text="Name" />
                </Column>
                <Column>
                    <Text text="Author" />
                </Column>
                <Column>
                    <Text text="Genre" />
                </Column>
                <Column>
                    <Text text="Release Date" />
                </Column>
                <Column>
                    <Text text="Available" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{book>ID}" />
                        <Text text="{book>Name}" />
                        <Text text="{book>Author}" />
                        <Text text="{book>Genre}" />
                        <Text text="{book>ReleaseDate}" />
                        <Text text="{book>AvailableQuantity}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>